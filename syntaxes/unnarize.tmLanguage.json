{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Unnarize",
  "scopeName": "source.unnarize",
  "fileTypes": ["unna"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.unnarize",
          "match": "//.*$"
        },
        {
          "name": "comment.block.unnarize",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.unnarize",
          "match": "\\b(if|else|while|for|return|break|continue|import|export|as)\b"
        },
        {
          "name": "storage.type.unnarize",
          "match": "\\b(var|function|async|await)\\b"
        },
        {
          "name": "constant.language.unnarize",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.unnarize",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.unnarize",
              "match": "\\\\[\\'\\\"\\\\nrt]"
            }
          ]
        },
        {
          "name": "string.quoted.single.unnarize",
          "begin": "'",
          "end": "'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.unnarize",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.unnarize",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*\\("
        },
        {
          "name": "support.function.builtin.unnarize",
          "match": "\\b(array|map|length|has|keys|push|pop|print)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.unnarize",
          "match": "[+\\-*/%&|^~!<>=]=?|\\.\\.\\.?|::|\b(and|or|not)\b"
        }
      ]
    }
  }
}
